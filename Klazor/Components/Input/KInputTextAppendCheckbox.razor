@namespace Klazor
@inherits KInputBase<string>

<div class="input-group">
    <input type="text" id="@(currentId)" class="@Classname" placeholder="@Placeholder" readonly="@currentReadonly"
           @attributes="@UnknownParameters"
           @bind="@currentValue" />
    <div class="input-group-append">
        <div class="input-group-text">
            <KInputCheckbox @bind-Value="Checked" id="exampleCheck1"></KInputCheckbox> 
            <label class="form-check-label" for="exampleCheck1">@Label</label>
        </div>
    </div>
</div>
