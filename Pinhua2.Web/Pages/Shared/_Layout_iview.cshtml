<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>PinhuaMaster2</title>
    <link rel="stylesheet" type="text/css" href="http://unpkg.com/iview/dist/styles/iview.css">
    <style scoped>
        .layout {
            border: 1px solid #d7dde4;
            background: #f5f7f9;
            position: relative;
            border-radius: 4px;
            overflow: hidden;
        }

        .layout-logo {
            width: 100px;
            height: 30px;
            background: #5b6270;
            border-radius: 3px;
            float: left;
            position: relative;
            top: 15px;
            left: 20px;
        }

        .layout-nav {
            width: 420px;
            margin: 0 auto;
            margin-right: 20px;
        }

        .ivu-layout-sider-children {
            background-color: #515a6e;
        }
    </style>

    <script type="text/javascript" src="http://vuejs.org/js/vue.min.js"></script>
    <script type="text/javascript" src="http://unpkg.com/iview/dist/iview.min.js"></script>
</head>
<body>
    <div id="app">
        <template>
            <div class="layout">
                <Layout :style="{minHeight: '99.8vh'}">
                    <Header>
                        <i-Menu mode="horizontal" theme="dark" active-name="1">
                            <div class="layout-logo" @@click="collapsedSider"></div>
                            <div class="layout-nav">
                                <Menu-Item name="1">
                                    <Icon type="ios-navigate"></Icon>
                                    Item 1
                                </Menu-Item>
                                <Menu-Item name="2">
                                    <Icon type="ios-keypad"></Icon>
                                    Item 2
                                </Menu-Item>
                            </div>
                        </i-Menu>
                    </Header>
                    <Layout>
                        <Sider ref="side1" hide-trigger collapsible collapsed-width="0" breakpoint="sm" v-model="isCollapsed" :style="{background: '#fff'}">
                            <i-Menu active-name="" theme="dark" width="auto" :open-names="['1']">
                                <Submenu name="1">
                                    <template slot="title">
                                        <Icon type="ios-navigate"></Icon>
                                        基础数据
                                    </template>
                                    <Menu-Item name="1-1">字典</Menu-Item>
                                    <Menu-Item name="1-2">商品</Menu-Item>
                                    <Menu-Item name="1-3">客户</Menu-Item>
                                    <Menu-Item name="1-4">供应商</Menu-Item>
                                </Submenu>
                                <Submenu name="2">
                                    <template slot="title">
                                        <Icon type="ios-keypad"></Icon>
                                        销售
                                    </template>
                                    <Menu-Item name="2-1">销售报价</Menu-Item>
                                    <Menu-Item name="2-2">销售订单</Menu-Item>
                                    <Menu-Item name="2-3">销售出库</Menu-Item>
                                    <Menu-Item name="2-4">收款单</Menu-Item>
                                </Submenu>
                                <Submenu name="3">
                                    <template slot="title">
                                        <Icon type="ios-analytics"></Icon>
                                        采购
                                    </template>
                                    <Menu-Item name="3-1">采购申请</Menu-Item>
                                    <Menu-Item name="3-2">采购询价</Menu-Item>
                                    <Menu-Item name="3-3">采购订单</Menu-Item>
                                    <Menu-Item name="3-4">采购入库</Menu-Item>
                                    <Menu-Item name="3-5">付款单</Menu-Item>
                                </Submenu>
                                <Submenu name="4">
                                    <template slot="title">
                                        <Icon type="ios-analytics"></Icon>
                                        仓库
                                    </template>
                                    <Menu-Item name="4-1">其他出库</Menu-Item>
                                    <Menu-Item name="4-2">其他入库</Menu-Item>
                                </Submenu>
                                <Submenu name="5">
                                    <template slot="title">
                                        <Icon type="ios-analytics"></Icon>
                                        生产
                                    </template>
                                    <Menu-Item name="5-1">生产订单</Menu-Item>
                                    <Menu-Item name="5-2">生产入库</Menu-Item>
                                </Submenu>
                                <Submenu name="6">
                                    <template slot="title">
                                        <Icon type="ios-analytics"></Icon>
                                        查询
                                    </template>
                                    <Menu-Item name="6-1">全部订单</Menu-Item>
                                    <Menu-Item name="6-2">全部订单收发</Menu-Item>
                                    <Menu-Item name="6-3">全部订单收付</Menu-Item>
                                    <Menu-Item name="6-4">库存</Menu-Item>
                                    <Menu-Item name="6-5">库批存</Menu-Item>
                                    <Menu-Item name="6-6">最新报价</Menu-Item>
                                    <Menu-Item name="6-7">最新单价</Menu-Item>
                                </Submenu>
                            </i-Menu>
                        </Sider>
                        <Layout :style="{padding: '0 24px 24px'}">
                            <Breadcrumb :style="{margin: '24px 0'}">
                                <Breadcrumb-Item>Home</Breadcrumb-Item>
                                <Breadcrumb-Item>Components</Breadcrumb-Item>
                                <Breadcrumb-Item>Layout</Breadcrumb-Item>
                            </Breadcrumb>
                            <Content :style="{padding: '24px', minHeight: '280px', background: '#fff'}">
                                @RenderBody()
                            </Content>
                        </Layout>
                    </Layout>
                </Layout>
            </div>
        </template>
    </div>
    <script>
        new Vue({
            el: '#app',
            data: {
                visible: false,
                isCollapsed: false,
            },
            methods: {
                collapsedSider() {
                    this.$refs.side1.toggleCollapse();
                }
            }
        })
    </script>
</body>
</html>