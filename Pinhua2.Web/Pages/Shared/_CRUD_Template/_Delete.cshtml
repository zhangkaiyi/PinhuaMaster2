@model _CRUD_Template_Model
@{
    ViewData["Title"] = "Delete";
    var main = CustomDisplayFactory.CustomDisplayModels(Model.RecordMain.Data).Where(m => m.ForDelete);
    var hasPriorityHigh = main.Any(p => p.Priority == Priority.High);
    var hasPriorityOthers = main.Any(p => p.Priority != Priority.High);
    var detailsArray = Model.RecordDetailsArray ?? new List<_CRUD_Template_Model_Details>();
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3 mt-3">
    <h3>删除 - @Model.RecordMain.Title</h3>
</div>
<div class="row" id="vueScope">
    <div class="col-12">
        <div class="row">
            @{
                if (!hasPriorityHigh && hasPriorityOthers)
                {
                    <!-- only hasPriorityOthers -->
                    <div class="col-md-12 col-lg-6">
                        @foreach (var cdm in main)
                        {
                            <div class="form-group row">
                                <label for="" class="col-4 col-md-4 col-lg-3 col-form-label">@cdm.Name</label>
                                <div class="col-8 col-md-8 col-lg-9">
                                    <input value="@cdm.Value" class="form-control" readonly />
                                </div>
                            </div>
                        }
                    </div>
                }
                else if (hasPriorityHigh && hasPriorityOthers)
                {
                    <!-- hasPriorityHigh && hasPriorityOthers -->
                    <div class="col-md-6">
                        @foreach (var cdm in main.Where(p => p.Priority == Priority.High))
                        {
                            <div class="form-group row">
                                <label for="" class="col-4 col-md-4 col-lg-3 col-form-label">@cdm.Name</label>
                                <div class="col-8 col-md-8 col-lg-9">
                                    <input value="@cdm.Value" class="form-control" readonly />
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col-md-6 d-none d-md-block">
                        @foreach (var cdm in main.Where(p => p.Priority != Priority.High))
                        {
                            <div class="form-group row">
                                <label for="" class="col-4 col-md-4 col-lg-3 col-form-label">@cdm.Name</label>
                                <div class="col-8 col-md-8 col-lg-9">
                                    <input value="@cdm.Value" class="form-control" readonly />
                                </div>
                            </div>
                        }
                    </div>
                }
            }
        </div>

        @foreach (var details in detailsArray)
        {
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3 mt-3">
                <h4>@details.Title</h4>
            </div>
            <div class="table-responsive mb-3">
                <table class="table table-bordered text-nowrap m-0 border-top-0" id="formTable">
                    <thead>
                        <tr>
                            @foreach (var cdm in CustomDisplayFactory.CustomDisplayModels(details.Data.GetType().GetGenericArguments()[0]).Where(d => d.ForDelete))
                            {
                                <th>@cdm.Name</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in details.Data)
                        {
                            <tr>
                                @foreach (var cdm in CustomDisplayFactory.CustomDisplayModels(item).Where(d => d.ForDelete))
                                {
                                    <td>@cdm.Value</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>
