<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>layout 后台大布局 - Layui</title>
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css">
    <link rel="stylesheet" href="~/lib/layui/css/layui.css">

    <link rel="stylesheet" href="~/css/my-main-header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/my-main-sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/my-main-content.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/skin-blue.css" />
    @RenderSection("Styles", required: false)
</head>
<body class="skin-blue">
    <div class="wrapper">
        <header class="main-header">
            <!-- Logo -->
            <a class="logo" href="/">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"><b>PHM</b></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg"><b>Pinhua</b>Master</span>
            </a>
            <!-- Header Navbar -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
            </nav>
        </header>
        <aside class="main-sidebar layui-bg-black">
            <div class="layui-side-scroll" style="width:250px">
                <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
                <ul class="layui-nav layui-nav-tree" style="width:230px" lay-filter="test">
                    <li class="layui-nav-item layui-nav-itemed">
                        <a href="javascript:;">基础数据</a>
                        <dl class="layui-nav-child">
                            <dd><a asp-page="/主数据/字典/Index">字典</a></dd>
                            <dd><a asp-page="/主数据/商品/Index">商品</a></dd>
                            <dd><a asp-page="/主数据/客户/Index">客户</a></dd>
                            <dd><a asp-page="/主数据/供应商/Index">供应商</a></dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item layui-nav-itemed">
                        <a href="javascript:;">销售</a>
                        <dl class="layui-nav-child">
                            <dd><a asp-page="/销售/销售报价/Index">销售报价</a></dd>
                            <dd><a asp-page="/销售/销售订单/Index">销售订单</a></dd>
                            <dd><a asp-page="/销售/销售出库单/Index">销售出库单</a></dd>
                            <dd><a asp-page="/销售/收款单/Index">收款单</a></dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item layui-nav-itemed">
                        <a href="javascript:;">采购</a>
                        <dl class="layui-nav-child">
                            <dd><a asp-page="/采购/采购申请/Index">采购申请</a></dd>
                            <dd><a asp-page="/采购/采购询价/Index">采购询价</a></dd>
                            <dd><a asp-page="/采购/采购订单/Index">采购订单</a></dd>
                            <dd><a asp-page="/采购/采购入库/Index">采购入库</a></dd>
                            <dd><a asp-page="/采购/付款单/Index">付款单</a></dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item layui-nav-itemed">
                        <a href="javascript:;">仓库</a>
                        <dl class="layui-nav-child">
                            <dd><a asp-page="/仓库/其他出库/Index">其他出库</a></dd>
                            <dd><a asp-page="/仓库/其他入库/Index">其他入库</a></dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item layui-nav-itemed">
                        <a href="javascript:;">生产</a>
                        <dl class="layui-nav-child">
                            <dd><a asp-page="/生产/生产订单/Index">生产订单</a></dd>
                            <dd><a asp-page="/生产/生产入库/Index">生产入库</a></dd>
                        </dl>
                    </li>
                    <li class="layui-nav-item layui-nav-itemed">
                        <a href="javascript:;">查询</a>
                        <dl class="layui-nav-child">
                            <dd><a asp-page="/查询/全部订单">全部订单</a></dd>
                            <dd><a asp-page="/查询/全部订单收发">全部订单收发</a></dd>
                            <dd><a asp-page="/查询/全部订单收付">全部订单收付</a></dd>
                            <dd><a asp-page="/查询/库存">库存</a></dd>
                            <dd><a asp-page="/查询/库批存">库批存</a></dd>
                            <dd><a asp-page="/查询/最新报价">最新报价</a></dd>
                            <dd><a asp-page="/查询/最新单价">最新单价</a></dd>
                        </dl>
                    </li>
                </ul>
            </div>
            <!-- /.sidebar -->
        </aside>
        <div class="content-wrapper"><div class="content">@RenderBody()</div></div>
        <footer class="main-footer">
            <!-- Default to the left -->
            <strong>Copyright © 2018 <a href="#">PinhuaMaster</a>.</strong> All rights reserved.
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/layui/layui.all.js"></script>
    <script src="~/js/pull-menu.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>