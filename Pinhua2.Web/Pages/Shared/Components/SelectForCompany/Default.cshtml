@model Pinhua2.Web.ViewComponents.SelectForCompanyModel

@{
}

<div class="form-group row">
    <label my-model-for="Model.Model" class="col-4 col-md-4 col-lg-3 col-form-label"></label>
    <div class="col-8 col-md-8 col-lg-9">
        @if (Model.Disabled)
        {
            <select class="form-control" my-model-for="Model.Model" disabled>
                @foreach (var item in Model.CustomerSelectList)
                {
                    if (Model?.Model?.Value?.ToString() == item.Value)
                    {

                        <option value="@(item.Value)" selected>@(item.Text)</option>
                    }
                    else
                    {
                        <option value="@(item.Value)">@(item.Text)</option>
                    }
                }
            </select>
        }
        else
        {
            <select class="form-control" my-model-for="Model.Model">
                @foreach (var item in Model.CustomerSelectList)
                {
                    if (Model?.Model?.Value?.ToString() == item.Value)
                    {

                        <option value="@(item.Value)" selected>@(item.Text)</option>
                    }
                    else
                    {
                        <option value="@(item.Value)">@(item.Text)</option>
                    }
                }
            </select>
        }
    </div>
</div>