@page
@model Pinhua2.Web.Pages.主数据.字典.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3 mt-3">
    <h3>字典</h3>
    <div class="btn-group">
        <a class="btn btn-outline-secondary" asp-page="Create">新增</a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-bordered text-nowrap">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.字典列表[0].字典名)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.字典列表[0].组)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.字典列表)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.字典名)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.组)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.RecordId">修改</a> |
                    <a asp-page="./Details" asp-route-id="@item.RecordId">查看</a> |
                    <a asp-page="./Delete" asp-route-id="@item.RecordId">删除</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
