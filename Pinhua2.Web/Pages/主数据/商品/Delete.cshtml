@page
@model Pinhua2.Web.Pages.主数据.商品.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3 mt-3">
    <h3>删除 - 商品</h3>
</div>

<div class="row" id="vueScope">
    <div class="col-12">
        @foreach (var cdm in new Common.Attributes.CustomDisplayProvider(Model.vm_地板).OnDeleteList.OrderBy(p => p.Order))
        {
            <div class="form-group row">
                <label class="col-4 col-sm-2 col-form-label">@cdm.Property.Name</label>
                <div class="col-8 col-sm-10">
                    <input value="@cdm.Property.GetValue(Model.vm_地板)" class="form-control" readonly />
                </div>
            </div>
        }
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="vm_地板.RecordId" />
    <input type="submit" value="删除" class="btn btn-danger" /> |
    <a asp-page="./Index">返回列表</a>
</form>
