@page
@model Pinhua2.Web.Pages.主数据.商品.DetailsModel
@using Newtonsoft.Json
@using Pinhua2.Web.Mapper
@using Pinhua2.Common.Attributes
@{
    ViewData["Title"] = "Details";
}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3 mt-3">
    <h3>查看 - 商品</h3>
</div>
<div class="row" id="vueScope">
    <div class="col-12">
        @foreach (var cdm in new CustomDisplayProvider(Model.vm_地板).OnDetailsList.OrderBy(p => p.Order))
        {
        <div class="form-group row">
            <label for="" class="col-4 col-sm-2 col-form-label">@cdm.Name</label>
            <div class="col-8 col-sm-10">
                <input value="@cdm.Value" class="form-control" readonly />
            </div>
        </div>
        }
    </div>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.vm_地板.RecordId">修改</a> |
    <a asp-page="Index">返回列表</a>
</div>

