@page
@model Pinhua2.Web.Pages.主数据.商品.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3 mt-3">
    <h3>商品</h3>
    <div class="btn-group">
        <a class="btn btn-outline-secondary" asp-page="Create">新增</a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-bordered text-nowrap">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.tb_商品表[0].品号)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tb_商品表[0].品名)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tb_商品表[0].别名)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tb_商品表[0].规格)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.tb_商品表[0].备注)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.tb_商品表)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.品号)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.品名)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.别名)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.规格)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.备注)
                </th>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.RecordId">修改</a> |
                    <a asp-page="./Details" asp-route-id="@item.RecordId">查看</a> |
                    <a asp-page="./Delete" asp-route-id="@item.RecordId">删除</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
