@page
@model Pinhua2.Web.Pages.主数据.供应商.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mt-3 mb-3">
    <h3>供应商</h3>
    <div class="btn-group">
        <partial name="Buttons/CreateButton" />
    </div>
</div>

<div class="table-responsive">
    <table class="table table-bordered text-nowrap">
        <thead>
            <tr>
                <th style="width:1%;" data-width="1%"></th>
                <th>
                    @Html.DisplayNameFor(model => model.供应商列表[0].往来号)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.供应商列表[0].简称)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.供应商列表[0].联系人)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.供应商列表[0].联系电话)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.供应商列表)
            {
            <tr>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.RecordId">修改</a> |
                    <a asp-page="./Details" asp-route-id="@item.RecordId">查看</a> |
                    <a asp-page="./Delete" asp-route-id="@item.RecordId">删除</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.往来号)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.简称)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.联系人)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.联系电话)
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
