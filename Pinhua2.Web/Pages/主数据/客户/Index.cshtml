@page
@model Pinhua2.Web.Pages.主数据.客户.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center mb-3 mt-3">
    <h3>客户</h3>
    <div class="btn-group">
        <a class="btn btn-outline-secondary" asp-page="Create">新增</a>
        <a class="btn btn-outline-secondary">导出</a>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-bordered text-nowrap">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.客户列表[0].往来号)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.客户列表[0].简称)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.客户列表[0].联系人)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.客户列表[0].联系电话)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.客户列表)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.往来号)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.简称)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.联系人)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.联系电话)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.RecordId">修改</a> |
                    <a asp-page="./Details" asp-route-id="@item.RecordId">查看</a> |
                    <a asp-page="./Delete" asp-route-id="@item.RecordId">删除</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
