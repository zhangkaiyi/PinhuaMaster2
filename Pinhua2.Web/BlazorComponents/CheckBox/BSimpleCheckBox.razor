@inherits Blazui.Component.Form.BFieldComponentBase<TValue>
@typeparam TValue
@using  Blazui.Component.EventArgs
@{
    switch (Status)
    {
        case Status.UnChecked:
            _isChecked = string.Empty;
            _isIndeterminate = string.Empty;
            break;
        case Status.Checked:
            _isChecked = "is-checked";
            _isIndeterminate = string.Empty;
            break;
        case Status.Indeterminate:
            _isChecked = string.Empty;
            _isIndeterminate = "is-indeterminate";
            break;
    }
    <label class="">
            <input type="checkbox" @onchange="ChangeStatus" class="" value="" checked="@((Status == Status.Checked)?true:false)" />
        <span class="">
            @ChildContent
        </span>
    </label>
}