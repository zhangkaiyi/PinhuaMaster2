@namespace Piuhua2.Components.Modal

<KModal IsFade="false" IsBackdrop="false" IsCentered="false" Size="Size.ExtraLarge" @ref="modal">
    <KModalHeader>商品</KModalHeader>
    <KModalBody>
        <KTable2 DataSource="products" IsResponsive="true" IsBordered="true" IsTextNoWrap="true" IsHovarable="true" @ref="table"
                CheckBoxHeader="true" IsClickToSelect="true" IsSingleSelect="@IsSingleSelect" PageSize="10">
            <KTable2Columns>
                <KTable2Column Field="@(nameof(dto商品.品号))"></KTable2Column>
                <KTable2Column Field="@(nameof(dto商品.品名))"></KTable2Column>
                <KTable2Column Field="@(nameof(dto商品.型号))"></KTable2Column>
                <KTable2Column Field="@(nameof(dto商品.规格))"></KTable2Column>
                <KTable2Column Field="@(nameof(dto商品.备注))"></KTable2Column>
            </KTable2Columns>
        </KTable2>
    </KModalBody>
    <KModalFooter>
        <button type="button" class="btn btn-secondary" @onclick="Cancel">取消</button>
        <button type="button" class="btn btn-primary" @onclick="OK">选择</button>
    </KModalFooter>
</KModal>