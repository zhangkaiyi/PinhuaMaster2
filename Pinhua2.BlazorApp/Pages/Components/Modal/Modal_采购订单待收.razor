@namespace Piuhua2.Components.Modal

<KModal IsFade="false" IsBackdrop="false" IsCentered="false" Size="Size.ExtraLarge" @ref="modal">
    <KModalHeader>采购订单待收</KModalHeader>
    <KModalBody>
        <KTable2 DataSource="currentDataSource" IsResponsive="true" IsBordered="true" IsTextNoWrap="true" IsHovarable="true" @ref="table"
                CheckBoxHeader="true" IsClickToSelect="true" IsSingleSelect="@IsSingleSelect">
            <KTable2Columns>
                <KTable2Column Field="@(nameof(view_AllOrdersIO.业务类型))"></KTable2Column>
                <KTable2Column Field="@(nameof(view_AllOrdersIO.单号))"></KTable2Column>
                <KTable2Column Field="@(nameof(view_AllOrdersIO.子单号))"></KTable2Column>
                <KTable2Column Field="@(nameof(view_AllOrdersIO.日期))" Format="yyyy-MM-dd"></KTable2Column>
                <KTable2Column Field="@(nameof(view_AllOrdersIO.往来))"></KTable2Column>
                <KTable2Column Field="@(nameof(view_AllOrdersIO.品号))"></KTable2Column>
                <KTable2Column Field="@(nameof(view_AllOrdersIO.品名))"></KTable2Column>
                <KTable2Column Field="@(nameof(view_AllOrdersIO.型号))"></KTable2Column>
                <KTable2Column Field="@(nameof(view_AllOrdersIO.规格))"></KTable2Column>
                <KTable2Column Field="@(nameof(view_AllOrdersIO.个数))"></KTable2Column>
                <KTable2Column Field="@(nameof(view_AllOrdersIO.已收))"></KTable2Column>
                <KTable2Column Field="@(nameof(view_AllOrdersIO.待收))"></KTable2Column>
                <KTable2Column Field="@(nameof(view_AllOrdersIO.备注))"></KTable2Column>
            </KTable2Columns>
        </KTable2>
    </KModalBody>
    <KModalFooter OnCancel="@(e=>OnCancel.InvokeAsync(this))" OnOK="@(e=>OnOK.InvokeAsync(this))" />
</KModal>