@inherits DBase
@page "/基础数据/字典/删除/{RecordId:int}"


<KRow>
    <KCol MD="6">
        <PageTemplateItem Title="字典 - 删除">
            <KFormGroupContainer LabelCol="3" LabelAlign="LabelAlign.Right" InputReadonly="true">
                <KFormGroup Label="@nameof(main.字典号)">
                    <KInputText @bind-Value="main.字典号"></KInputText>
                </KFormGroup>
                <KFormGroup Label="@nameof(main.字典名)">
                    <KInputText @bind-Value="main.字典名"></KInputText>
                </KFormGroup>
                <KFormGroup Label="@nameof(main.组号)">
                    <KInputText @bind-Value="main.组号"></KInputText>
                </KFormGroup>
                <KFormGroup Label="@nameof(main.组名)">
                    <KInputText @bind-Value="main.组名"></KInputText>
                </KFormGroup>
            </KFormGroupContainer>
        </PageTemplateItem>

        <PageTemplateItem Title="明细"
                          HasBottomLeftButton="true" BottomLeftButtonOnClick="@(e=>NavigationManager.NavigateTo(routeA))"
                          HasBottomRightButton="true" BottomRightButtonTitle="确认删除"
                          BottomRightButtonColor="Color.Danger" BottomRightButtonOnClick="@toDelete">
            <KTable2 DataSource="detailsTableDataSource" IsResponsive="true" IsBordered=" true" IsTextNoWrap="true" @ref="detailsTable"
                     CheckBoxHeader="true" IsSingleSelect="true" IsClickToSelect="true">
                <KTable2Columns>
                    <KTable2Column Width="1" Text="#" Context="row">@(detailsTableDataSource.IndexOf(row as dto字典D) + 1)</KTable2Column>
                    <KTable2Column Width="500" Field="@(nameof(dto字典D.编号))"></KTable2Column>
                    <KTable2Column Width="500" Field="@(nameof(dto字典D.名称))"></KTable2Column>
                    <KTable2Column Width="500" Field="@(nameof(dto字典D.代码))"></KTable2Column>
                </KTable2Columns>
            </KTable2>
        </PageTemplateItem>
    </KCol>
</KRow>

