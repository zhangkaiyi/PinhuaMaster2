@namespace Klazor

<CascadingValue Value="this">
    <input type="text" id="@(Model.Field.Name)" 
           class="@Classname" 
           placeholder="@(!string.IsNullOrEmpty(Placeholder) ? Placeholder : Model.FormControl.Placeholder)"
           readonly="@(Readonly.HasValue ? Readonly.Value : Model.FormControl.Readonly)"
           @attributes="@UnknownParameters" @bind="@(inputValue)" />
    @ChildContent
</CascadingValue>