@namespace Klazor

<CascadingValue Value="this">
    <div @attributes="UnknownParameters">
        @foreach (var model in models)
        {
            <div class="form-group row">
                <label for="" class="col-4 col-md-4 col-lg-3 col-form-label">@model.Name</label>
                <div class="col-8 col-md-8 col-lg-9">
                    <input value="@model.Value" class="form-control" readonly />
                </div>
            </div>
        }
    </div>
</CascadingValue>